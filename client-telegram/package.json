{
  "name": "@shado-network/client-telegram",
  "description": "Basic Telegram client through Telegraf.",
  "keywords": [],
  "version": "0.0.1",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "npm run clean && tsup ./src",
    "watch": "tsup ./src --watch",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "type": "module",
  "files": [
    "dist",
    "package.json"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  }
}
